<div class="row">
    <!-- First Row: Product Search Bar and Button -->
    <div class="col-md-10">
        <div class="form-group">
            <input type="text" id="productName" class="form-control" placeholder="Search by Name">
        </div>
    </div>
    <div class="col-md-1">
        <button id="searchButton" class="btn btn-primary bg-green btn-custom" style="width: 70px;">Search</button>
    </div>
    <div class="col-md-1">
        <a href="@Url.Action("Add", "Product")" class="btn btn-primary bg-green btn-custom" style="width: 70px;">Add</a>
    </div>
</div>
<div class="row">
    <div class="col-md-3">
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="categoryCheckbox">
            <label class="form-check-label" for="categoryCheckbox">Search by Category</label>
        </div>
    </div>
    <div class="col-md-4">
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="promotedCheckbox">
            <label class="form-check-label" for="promotedCheckbox">Search Promoted Products</label>
        </div>
    </div>
    <div class="col-md-4">
    </div>
    <div class="col-md-1">
        <button id="sortButton" class="btn btn-primary bg-green btn-custom" style="width: 70px;">Sort</button>
    </div>
</div>