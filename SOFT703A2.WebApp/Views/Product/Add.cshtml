@model SOFT703A2.Infrastructure.Contracts.ViewModels.Product.ICreateProductViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
<h2>Create New Product</h2>
<form asp-controller="Product" asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Photo">Photo Url</label>
        <input asp-for="Photo" class="form-control"/>
        <span asp-validation-for="Photo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SelectedCategory">Category</label>
        <select asp-for="SelectedCategory" class="form-control" id="SelectedCategoryId">
            @foreach (var category in Model.Categories)
            {
                <option value="@category.Value">@category.Text</option>
            }
        </select>
        <span asp-validation-for="Categories" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price">Price</label>
        <input asp-for="Price" class="form-control"/>
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Stock">Stock</label>
        <input asp-for="Stock" class="form-control"/>
        <span asp-validation-for="Stock" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="checkbox" asp-for="IsPromoted" class="form-check-input"/>
        <label asp-for="IsPromoted">Promote?</label>
        <span asp-validation-for="IsPromoted" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-primary bg-green btn-custom">Add</button>
</form>