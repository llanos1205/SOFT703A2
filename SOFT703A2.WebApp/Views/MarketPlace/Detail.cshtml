@model SOFT703A2.Infrastructure.Contracts.ViewModels.Catalog.IDetailMarketProductViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Details</h2>
    <input type="hidden" asp-for="Id"/>
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <label asp-for="Name">@Model.Name</label>
     
    </div>

    <div class="form-group">
        <label asp-for="Photo">Photo</label>
        <img src="@Model.Photo" />
    </div>
    <div class="form-group">
            <label asp-for="CategoryName">Category</label>
            <label asp-for="CategoryName">@Model.CategoryName</label>

        </div>
    <div class="form-group">
        <label asp-for="Price">Price</label>
        <label asp-for="Price">@Model.Price</label>
    </div>
    <div class="form-group">
        <label asp-for="Stock">Stock</label>
        <label asp-for="Stock">@Model.Stock</label>
    </div>


     <a href="@Url.Action("AddToTrolleyView", "MarketPlace", new { id = @Model.Id })" class="btn btn-danger">Add to trolley</a>

